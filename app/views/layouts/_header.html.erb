<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "club-biz", root_path, id: "logo" %>
      <nav>
        <% if signed_in? and student? %>
          <%= render 'layouts/student_header' %>

        <% elsif signed_in? and admin? %>
          <%= render 'layouts/admin_header' %>

        <% elsif signed_in? and root? %>
          <ul class="nav pull-right">
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
          
        <% end %>
      </nav>
    </div>
  </div>
</header>