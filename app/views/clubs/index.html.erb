<% provide(:title, 'Browse clubs') %>
<h1>Browse clubs</h1>

<!--search bar -->
<div class = "span5 offset3">
	<%= form_tag clubs_path, method: 'get' do %>
	    <%= text_field_tag :search, params[:search] %>
</div>
<div class = "span1 offset 3">
	    <button type = "submit" class="btn">Search</button>
	<% end %>
</div>

<!--event list -->

<div class = "span6 offset3">
	<ul class="clubs">
	  <% @clubs.each do |club| %>
	    <li>
	      <%= link_to image_tag(club.logo.url(:thumb)), club %>
	      <%= link_to club.name, club %>
		</li>
	  <% end %>
	</ul>
</div>