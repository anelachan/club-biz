<div class = "span6 offset3">
  <h1>
    Reserve tickets for <%= @event.name %>
  </h1>
<!-- INSTRUCTIONS AND CONDITIONS -->
  <ul class="generic-list">
    <li><b>Purchase Instructions</b></li>
    <li><em>This form does not complete a ticket purchase transaction. 
      Please follow the instructions as follows.</em></li>
	  <li><%= @event.ticket_purchase_instructions %></li>
    <li><em>Sales start at <%= l @event.sales_start %> </em></li>
    <li><em>Sales end at <%= l @event.sales_end %>.</em></li>
    <li><b>Conditions of Reservation</b></li>
    <li><%= @event.conditions %></li>
    <li><b>Tickets Remaining: </b><%= @tickets_remaining %>
  </ul>
</div>
<!-- RESERVATION FORM -->
<div class="span2 offset3">
  <%= form_for(@ticket_reservation) do |f| %>
    <div><%= f.hidden_field :event_id %></div>
    <%= f.label :num_tickets, 'Number of tickets to reserve' %>
    <%= f.select :num_tickets, (1..20).to_a, selected: @ticket_reservation.num_tickets %>
    <%= f.submit "Reserve tickets", class: "btn btn-large btn-primary" %>
  <% end %>
</div>